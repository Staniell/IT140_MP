<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/backendtitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="100px"
        android:textAlignment="center"
        android:textFontWeight="800" />
    <TextView
        android:text="@string/backenddesc"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:textAlignment="center" />
    <Button
        android:text="@string/backendstats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/statBtn" />
    <Button
        android:text="@string/backendorders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orderBtn" />
    <Button
        android:text="@string/backendbooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bookBtn" />
    <Button
        android:text="@string/backendlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adminoutBtn" />

</LinearLayout>
