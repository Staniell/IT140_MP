<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:layout_gravity="center_horizontal">

    <TextView
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_txt" />
    <Button
        android:text="@string/buy"
        android:layout_width="159.2dp"
        android:layout_height="wrap_content"
        android:id="@+id/order_btn"
        android:backgroundTint="#bbdb98"
        android:textColor="#977563"
        android:layout_gravity="center"
        android:layout_marginTop="230.9dp"
        />
   

    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="365.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="100.6dp"
        android:layout_gravity="center_horizontal">


        <Button
            android:text="@string/pending"
            android:layout_width="159.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pending_btn"
            android:backgroundTint="#bbdb98"
            android:textColor="#977563"
            android:layout_marginLeft="17.5dp"/>
        <Button
            android:text="@string/done"
            android:layout_width="143.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/done_btn"
            android:layout_marginRight="0.0dp"
            android:backgroundTint="#bbdb98"
            android:textColor="#977563"
            android:layout_marginLeft="18.7dp"
            />

    
        
    
        
    </LinearLayout>

    

    <Button
        android:text="@string/logout"
        android:layout_width="129.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/log_btn"
        android:textStyle="bold"
        android:layout_marginTop="210dp"
        android:backgroundTint="#bbdb98"
        android:textColor="#977563"
        android:layout_gravity="center_horizontal"/>




</LinearLayout>
