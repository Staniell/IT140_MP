<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circles"
    android:gravity="center_horizontal">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="99.0dp"
        android:layout_height="101.5dp"
        android:id="@+id/imageView1"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="-20.5dp"
        android:layout_marginTop="40.0dp" 
        />
    <ImageView
        android:src="@drawable/logintext"
        android:layout_width="207.5dp"
        android:layout_height="89.5dp"
        android:id="@+id/imageView2"
        android:layout_marginTop="0.0dp" />

    <TextView
        android:text="@string/email"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="321.5dp"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1"
        android:layout_gravity="center_horizontal"
        />
    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/editText1"
        android:layout_width="336.5dp"
        android:layout_height="36.5dp"
        android:textColor="#f85201"
        android:paddingLeft="10dp"
        android:background="@drawable/edittextbox"
        android:layout_marginBottom="@dimen/abc_text_size_body_2_material"
        tools:ignore="HardcodedColor" />
    <TextView
        android:text="@string/password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="332.5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/textView2"
         />
    <EditText
        android:inputType="textPassword"
        android:layout_width="333.0dp"
        android:layout_height="36.5dp"
        android:textColor="#f85201"
        android:paddingLeft="10dp"
        android:id="@+id/editText2"
        android:background="@drawable/edittextbox"
        android:layout_marginBottom="@dimen/abc_action_bar_content_inset_material"
        tools:ignore="HardcodedColor"/>
    <Button
        android:text="@string/login"
        android:layout_width="131.0dp"
        android:textFontWeight="600"
        android:layout_height="wrap_content"
        android:backgroundTint="#ff7f27"
        android:id="@+id/button1" />
    <Button
        android:text="I do not have an account"
        android:layout_width="233.0dp"
        android:textFontWeight="600"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:backgroundTint="#ff7f27"
        android:id="@+id/button2" />

</LinearLayout>
